<div id="errors"></div>
<div id="mainContainer">
	<div class="innerHolder">
		<form class="form-contact" id="mainContactForm" method="post">
		  <input type="text" name="name" class="emailforma" placeholder="<%= t('home.contact.name') %>" >
		  <input type="text" name="email" class="emailforma" placeholder="<%= t('home.contact.email') %>" >
		  <textarea name="message" rows="5" cols="4" placeholder="<%= t('home.contact.message') %>" ></textarea>
		  <br/>
		</form><br/>

		<div class="tip"><p></p>
		<div class="send_btn">
			<a class="" href="#" onclick="$('#mainContactForm').submit()"><%= t('home.contact.button') %></a>
		</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$("#mainContactForm").validate({
		  rules: {
		    name: 		"required",
		    message: 	"required",
		    email: 		{ required: true, email: true}
		  },
		  messages: {
		  	name: 	"<%= t('home.contact.nameerr') %>",
		  	email: 	"<%= t('home.contact.emailerr') %>",
		  	message: "<%= t('home.contact.messageerr') %>",
		  },

		  errorElement: "div",
		  // wrapper: "div",  a wrapper around the error message
	        errorPlacement: function(error, element) {
	            offset = element.offset();
	            error.insertBefore(element)
	            error.addClass('message');  // add a class to the wrapper
	            error.css('position', 'absolute');
	            error.css('left', offset.left + element.outerWidth());
	            error.css('top', offset.top);
	            element.css('border', '1px solid #ff0000');
	          //  element.value = element.messages[name];
	           // name.css('border', '1px solid #ff0000');

	        },
		  submitHandler: function(form) {
   			form.submit();
 			}
		})
	});
</script>